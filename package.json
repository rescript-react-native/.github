{
  "private": true,
  "name": "@reason-react-native/github",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.{md,json,js,css}\""
  },
  "devDependencies": {
    "husky": "^4.0.0",
    "lint-staged": "^10.0.0",
    "prettier": "^2.0.0"
  },
  "prettier": {
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "lint-staged": {
    "*.{md,json,js,css}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
